  height: 28rpx;
} */

.payment-product-list {
  background: #efeff4;
}

.payment-product-item {
  background: #fff;
  padding: 30rpx;
  padding-bottom: 0;
  font-size: 0;
  border-bottom: 1px solid #f3f3f3;
  margin-bottom: 16rpx;
}

.payment-product-image {
  float: left;
  width: 160rpx;
  height: 160rpx;
  box-sizing: border-box;
  border: 2rpx solid #ccc;
}

.payment-product-detail {
  position: relative;
  padding-left: 32rpx;
  padding-right: 150rpx;
  height: 160rpx;
  overflow: hidden;
}

.payment-product-title {
  font-size: 28rpx;
  line-height: 30rpx;
  max-height: 60rpx;
  overflow: hidden;
  color: #3c3b4b;
  margin-bottom: 12rpx;
}

.product-contianer {
  padding-bottom: 40rpx;
  border-bottom:1px solid #f3f3f3;
}

.payment-product-spec {
  color: #959595;
  font-size: 26rpx;
  line-height: 27rpx;
}

.payment-product-quantity {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 26rpx;
  line-height: 1em;
  color: #87858f;
}

.payment-product-price {
  position: absolute;
  left: 32rpx;
  bottom: 0;
  font-size: 26rpx;
  color: #111;
  line-height: 26rpx;
}

.payment-selected-coupon-face-value {
  font-size: 30rpx;
  color: #e23737;
}

.payment-selected-coupon-face-value::before {
  content: '\00A5';
  display: inline-block;
  margin-right: 4rpx;
  font-size: 30rpx;
}

.payment-available-coupon {
  font-size: 30rpx;
  color: #e23737;
}

.payment-show-coupon-arrow {
  font-size: 30rpx;
  color: #3c3b4b;
}

.payment-wechat-icon {
  padding-right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.payment-wechat-text {
  line-height: 88rpx;
  vertical-align: middle;
}

.payment-item-detail--right {
  font-size: 32rpx;
}

.payment-address-select-item {
  padding: 20rpx;
  font-size: 28rpx;
}

.payment-user-message-container {
  display: flex;
  height: 98rpx;
  font-size: 30rpx;
  line-height: 98rpx;
  border-bottom: 1px solid #f3f3f3;
}

.payment-user-message-lable {
  display: inline-block;
  font-weight: 700;
}

.payment-user-message-lable text {
  color: #E23737;
  vertical-align: middle;
}

.payment-user-message-input {
  flex: 1;
  height: 98rpx;
  line-height: 98rpx;
  min-height: 98rpx;
  font-size: 30rpx;
  z-index: 0;
}

.payment-page--foot {
  position: fixed;
  height: 100rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  bottom: 0;
  left: 0;
  width: 100%;
  color: #fd544a;
  background-color: #fff;
}

.payment-total-price {
  float: right;
  margin-right: 30rpx;
}

.payment-submit-btn {
  float: right;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 0;
  font-size: 36rpx;
  width: 240rpx;
  color: #fff;
  text-align: center;
  background-color: #e23737;
}

.payment-submit-btn::after {
  border: 0;
}

.payment-submit-btn--active::after {
  background: rgba(0, 0, 0, 0.1);
}

.address-list-container {
  position: fixed;
  background-color: #fff;
  bottom: 0;
  width: 100%;
  max-height: 67%;
  overflow-y: scroll;
  margin-bottom: 88rpx;
  z-index: 2;
}

.has-use-wx-address {
  margin-bottom: 176rpx;
}

.address-list {
  font-size: 28rpx;
  bottom: 0;
  z-index: 9;
  width: 100%;
}

.address-item {
  color: #2b2b2b;
  z-index: 2;
  padding: 20rpx 30rpx;
}

.address-list--header {
  font-size: 15px;
  margin-bottom: 6px;
}

.address-list--body {
  line-height: 36rpx;
}

.item {
  align-items: center;
  border-bottom: 0.5rpx solid #e5e5e5;
  box-sizing: border-box;
  position: relative;
}

.pull-right {
  float: right;
}

.address-list__useWxAddress, .address-list__cancel-btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  text-align: center;
  line-height: 88rpx;
  height: 88rpx;
  color: #3c3b4b;
  background-color: #fff;
  border-top: 0.5rpx solid #e5e5e5;
  z-index: 2;
}

.address-list__useWxAddress {
  bottom: 88rpx;
}

.address-list__mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 2;
}

.address-form {
  position: fixed;
  width: 100%;
  box-sizing: border-box;
  left: 1000px;
  top: 0;
  bottom: 0;
  z-index: 2;
}

.address-form__cancel {
  margin-bottom: 16rpx;
  background-color: #fff;
}

.address-form-section {
  bottom: 130rpx;
}

.gift-explain-btn {
  position: fixed;
  right: 0;
  top: 168rpx;
  width: 128rpx;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0;
  padding-left: 20rpx;
  border-radius: 0;
  border-top-left-radius: 24rpx;
  border-bottom-left-radius: 24rpx;
  font-size: 24rpx;
  color: #cbcbcb;
  background-color: #fff;
  box-shadow: -1px 1px 4px 0px rgba(0, 0, 0, 0.13);
}

.gift-explain-btn::after {
  border: 0;
}

.gift-explain-btn--hover {
  background-color: rgba(0, 0, 0, 0.05);
}

.giftExplainModal-mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.65);
}

.gift-explain-modal {
  top: 50%;
  bottom: auto;
  transform: translateY(-50%);
}

.address-create-method--mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.35);
  z-index: 2;
}

.address-create-method {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 80%;
  background-color: #fff;
  z-index: 2;
}

.address-create-method-item {
  text-align: center;
  font-size: 32rpx;
  line-height: 88rpx;
  color: #3c3b4b;
  border-bottom: 0.5px solid #e5e5e5;
}

.address-create-method-item:last-of-type {
  border-bottom: none;
}

/** 优惠券弹框 **/

.coupon-list-container {
  position: fixed;
  top: 0;
  bottom: 100rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.35);
  z-index: 2;
}

.coupon-list {
  position: absolute;
  bottom: 0;
