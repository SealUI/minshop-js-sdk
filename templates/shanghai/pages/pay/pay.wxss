@import "../../templates/couponCard/couponCard.wxss";
@import "../../templates/giftExplainModal/giftExplainModal.wxss";

page {
  background-color: #efeff4;
  min-height: 100%;
  line-height: 100%;
  overflow-x: hidden;
}

.nav-tab {
  height: 88rpx;
}

.nav-tab-container {
  position: relative;
  padding-top: 4rpx;
  height: 80rpx;
  background-color: #fff;
  z-index: 2;
  border-bottom: 0.5px #e5e5e5 solid;
}

.nav-tab-item {
  display: flex;
  justify-content: center;
}

.nav-tab-item__item-name {
  padding-top: 0;
  line-height: 80rpx;
  height: 80rpx;
  align-self: center;
}

.payment-gift-tip {
  display: flex;
  padding: 24rpx 88rpx;
  font-size: 30rpx;
  line-height: 48rpx;
  color: #3c3b4b;
}

.payment-page {
  background: #efeff4;
  color: #545454;
  text-align: left;
  padding-bottom: 100rpx;
}

.payment-item {
  background-color: #fff;
  margin-bottom: 16rpx;
  border-top: 0.5px #e5e5e5 solid;
}

.payment-item:first-of-type {
  border-top: none;
}

.payment-item-detail {
  display: flex;
  justify-content: space-between;
  margin: 0 30rpx;
  height: 88rpx;
  font-size: 30rpx;
  line-height: 88rpx;
  color: #3c3b4b;
  border-bottom: 1px #e5e5e5 solid;
}

.payment-item-detail--hasCoupon {
  border-bottom: 0.5px #e5e5e5 solid;
}

.payment-item-detail__total-price, .payment-item-detail__couponAmount {
  margin: 0 30rpx;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  line-height: 30rpx;
  border-bottom: 0.5px #e5e5e5 solid;
}

.payment-item-detail__couponAmount:last-child {
  margin-bottom: 0;
  padding-bottom: 30rpx;
}

.payment-address {
  position: relative;
  background-color: #fff;
  padding: 16rpx 30rpx 24rpx 88rpx;
  border-bottom: 0.5px #e5e5e5 solid;
  font-size: 32rpx;
}

.payment-address-message {
  font-size: 32rpx;
  line-height: 62rpx;
}

.address-beacon-icon {
  height: 38rpx;
  width: 38rpx;
  text-align: center;
  margin: 0 20rpx 0 -58rpx;
  font-size: 26rpx;
  line-height: 38rpx;
  display: inline-block;
  border-radius: 50%;
  color: #fff;
  background-color: #f8504f;
}

.address-share-icon {
  text-align: center;
  margin: 10rpx 20rpx 0 -58rpx;
  font-size: 38rpx;
  line-height: 38rpx;
  display: inline-block;
  color: #f6cd08;
}

.payment-address-message__name {
  font-weight: bold;
}

.payment-address-message__phone {
  padding-left: 22rpx;
  font-weight: bold;
}

.payment-address-message__detail {
  display: block;
  font-size: 28rpx;
  line-height: 38rpx;
  text-align: justify;
}

.payment-change-address {
  position: absolute;
  right: 26rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 30rpx;
  color: #c7c7cc;
}

.payment-address__edit {
  font-size: 26rpx;
  margin-right: 75rpx;
  position: relative;
}

.payment-address__edit::before {
  font-size: 26rpx;
  position: absolute;
  left: -38rpx;
  top: 50%;
  transform: translateY(-50%);
}

.payment-address__change {
  position: relative;
}

.payment-address__change::before {
  font-size: 26rpx;
  position: absolute;
  left: -38rpx;
  top: 50%;
  transform: translateY(-50%);
}


.payment-address__edit, .payment-address__change {
  float: right;
  display: inline-block;
  color: #111;
  font-size: 26rpx;
  background-color: #fff;
}

.payment-address-options {
  margin-top: 16rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #e5e5e5;
  font-size: 28rpx;
  color: #3c3b4b;
}

