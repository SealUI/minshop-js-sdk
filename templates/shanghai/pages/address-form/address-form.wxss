@import "../../common/common.wxss";
@import "../../common/iconfont.wxss";

.address-form {
  height: 100%;
  padding: 0 30rpx;
  background-color: #fff;
}

.address-form-section {
  height: 100rpx;
  font-size: 28rpx;
  line-height: 100rpx;
}

.address-form-item {
  height: 100rpx;
  border-bottom: 0.5px solid #e7e7e7;
}

.address-picker {
  position: relative;
}

.address-picker::after {
  border-left: 6px solid #fff;
  border-right: 6px solid #fff;
  border-top: 8px solid;
  color: #d9d9d9;
  content: "";
  height: 0;
  margin-top: -3px;
  pointer-events: none;
  position: absolute;
  right: 8px;
  top: 50%;
  width: 0;
}

.checkbox {
  margin-right: 20rpx;
}

.checkbox, .checkbox-active {
  display: inline-block;
  -webkit-appearance: none;
  appearance: none;
  border: none;
  outline: 0;
  font-size: 30rpx;
  margin-right: 12rpx;
}

.checkbox::before {
  color: #c7c7c7;
}

.checkbox-active::before {
  color: #f8504f;
}


.save-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #fff;
  background: #ccc;
}

.ready {
  background: #E23737;
  color: #fff;
}
