@import "../../templates/navTab/navTab.wxss";
@import "../../templates/productCard/productCard.wxss";

page {
  height: 100%;
  font-size: 0;
  background-color: #eeeff1;
}

view, text, navigator {
  box-sizing: border-box;
}

/** 商品轮播图 **/

.detail-swiper-container {
  position: relative;
}

.home-btn {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.45);
}

.detail-swiper {
  height: 560rpx;
}

.detail-img {
  width: 750rpx;
  height: 560rpx;
}

/** 商品简介 **/

.detail--header {
  text-align: center;
  padding-top: 48rpx;
}

.detail-sum {
  display: flex;
  padding-bottom: 20rpx;
}

.detail-sum-left {
  width: 516rpx;
  height: 100%;
}

.detail-sum-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-left: 1rpx dashed #959595;
}

.novel-score {
  font-size: 44rpx;
  color: #e23737;
  letter-spacing: 0;
  line-height: 62rpx;
  margin: 5rpx 0;
}

.novel-star {
  color: #e23737;
  font-size: 20rpx;
  margin-bottom: 16rpx;
}

.novel-name {
  font-size: 26rpx;
  color: #959595;
  letter-spacing: 0;
}

.novel-name text {
  vertical-align: middle;
}

.detail-info-container {
  display: flex;
  margin: 0 0 0 48rpx;
}

.detail-info {
  text-align: left;
  width: 100%;
}

.detail-collection {
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  background: rgba(17, 17, 17, 0.2);
  border-radius: 50%;
  text-align: center;
  line-height: 80rpx;
  width: 80rpx;
  height: 80rpx;
  font-size: 43rpx;
  color: #fff;
  align-self: flex-end;
  margin-bottom: 10rpx;
}

.detail-collection_active {
  color: #fff;
}

.detail-title {
  display: block;
  margin-bottom: 16rpx;
  font-family: PingFangSC-Medium;
  font-size: 38rpx;
  color: #111;
  line-height: 56rpx;
  margin-right: 48rpx;
}

.detail-summary {
  margin-bottom: 24rpx;
  line-height: 34rpx;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #959595;
  font-weight: 300;
}

.detail__discount-price {
  display: inline-block;
  position: relative;
  line-height: 58rpx;
  padding: 4rpx;
  padding-left: 24rpx;
  font-family: HelveticaNeue-Medium;
  font-size: 48rpx;
  color: #e23737;
  float: left;
}

.detail__discount-price-icon {
  position: absolute;
  top: 0rpx;
  left: -9rpx;
  font-size: 33rpx;
}

.detail__original-price {
  margin-top: 8rpx;
  font-size: 30rpx;
  line-height: 57rpx;
  color: #ccc;
  float: left;
  margin-left: 16rpx;
}

.detail__original-price-icon {
  position: absolute;
  top: -6rpx;
  left: 0;
  font-size: 20rpx;
  transform: scale(0.8);
}

.line-slash--has-padding {
  display: inline-block;
  padding-left: 20rpx;
}

/** 服务保证 **/

.service-guarantees {
  margin-top: 48rpx;
  padding: 0 48rpx;
}

.arrow-icon {
  font-size: 20rpx;
  margin-left: 10rpx;
  color: #959595;
}

/** 细节描述 **/

.detail-more {
  min-height: 212rpx;
  border-top: 1rpx solid #f3f3f3;
  color: #666;
  font-size: 24rpx;
  background-color: #fff;
}

.detail-description {
  display: inline-block;
  min-height: 60rpx;
  font-weight: 300;
}

.description-images {
  display: block;
  width: 650rpx;
}

.description-text {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #707070;
  letter-spacing: 0;
  line-height: 42rpx;
  margin: 48rpx;
}

.detail-tags {
  display: flex;
}

.tag {
  border: 2rpx solid #cabd73;
  border-radius: 4rpx;
  display: inline-block;
  padding: 0 12rpx;
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  line-height: 30rpx;
  color: #cabd73;
  letter-spacing: 0;
  margin-right: 14rpx;
}

/** 规格参数 **/

.detail-attributes {
  padding: 8px 20px 88rpx;
}

.attributes-item {
  line-height: 36px;
  font-size: 28rpx;
}

.attributes-key {
  color: #000;
}

.attributes-value {
  color: #707070;
}

/** 品牌描述 **/

.detail-vendor {
  padding: 64rpx 48rpx 88rpx;
}

.vendor-logo {
  height: 130rpx;
  width: 130rpx;
  float: left;
}

.vendor-name {
  margin-top: 24rpx;
  margin-left: 154rpx;
  font-size: 36rpx;
  line-height: 42rpx;
  color: #101010;
}

.vendor-description {
  clear: both;
  padding-top: 64rpx;
  text-align: justify;
  font-weight: 300;
  font-size: 30rpx;
  color: #707070;
  line-height: 56rpx;
}

.selection-product {
  background-color: #fff;
  padding-bottom: 100rpx;
}

.selection-product--header {
  padding-top: 24rpx;
  line-height: 44rpx;
  font-size: 32rpx;
  color: #101010;
  text-align: center;
}

/** 商品列表 **/

.product-list {
  padding: 20rpx 0 20rpx 20rpx;
}

.product-item {
  display: inline-block;
  width: 240rpx;
  margin-right: 24rpx;
  vertical-align: top;
  text-align: center;
}

/** 底部栏 **/

.shopping-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  align-items: center;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  background-color: #111;
}

.offshelf-tip {
  position: fixed;
  left: 0;
  bottom: 88rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  width: 100%;
  background: #777;
  opacity: 0.9;
  color: #fff;
  text-align: center;
}

.shopping-bar-item {
  display: flex;
  flex-flow: column;
  justify-content: center;
  position: relative;
  width: 100%;
  height: 88rpx;
  font-size: 28rpx;
}

.shopping-bar-item.disabled {
  opacity: 0.5;
}

.shopping-cart-count {
  position: absolute;
  top: 8rpx;
  right: 26rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #f84f4f;
  transform: translate(50%, -50%);
  line-height: 35rpx;
  font-size: 20rpx;
  color: #fff;
}

.service-icon, .cart-icon, .gift-icon {
  flex-basis: 100rpx;
  min-width: 100rpx;
  line-height: 28rpx;
  font-size: 20rpx;
}

.gift-icon {
  color: #d9b461;
}

.icon-shopping-cart-linetype, .icon-gift, .icon-service {
  position: relative;
  display: inline-block;
  line-height: 40rpx;
  font-size: 36rpx;
}

.icon-line {
  display: inline-block;
  content: '';
  height: 88rpx;
  border-right: 1px solid rgba(255, 255, 255, 0.4);
  transform: scaleX(0.5);
}

.user-contact-button {
  background: transparent;
  color: inherit;
  line-height: inherit;
  font-size: inherit;
  border: none;
  padding: 6rpx 10rpx;
}

.button-buy {
  border-top: 1rpx solid #f8504f;
  background-color: #e23737;
}

.button-add {
  border-top: 1rpx solid #3c3b4b;
  background-color: #111;
}

/** 购买弹出框 **/

.shopping-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  min-height: 750rpx;
  background-color: #fff;
  z-index: 2000;
}

/** 弹框头部，商品名称、价格 **/

.shopping-box--header {
  display: flex;
  padding: 32rpx;
  color: #4a4a4a;
}

.shopping-box__image {
  height: 160rpx;
  width: 160rpx;
  margin-right: 24rpx;
  border-radius: 4rpx;
  border: 1rpx solid #d9d9d9;
}

.shopping-box__title {
  font-size: 30rpx;
  font-weight: 700;
  width: 460rpx;
  color: #101010;
}

.shopping-box__discount-price {
  position: relative;
  display: inline-block;
  font-size: 48rpx;
  color: #e23737;
  line-height: 57rpx;
  padding-left: 24rpx;
  margin-right: 16rpx;
}

.shopping-box__discount-price-icon {
  top: -5rpx;
}

.shopping-box__original-price {
  position: relative;
  font-size: 28rpx;
  line-height: 42rpx;
  color: #ccc;
}

.shopping-box__close-container {
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  width: 60rpx;
  height: 60rpx;
  margin-top: 12rpx;
  margin-right: 12rpx;
}

.shopping-box__close {
  float: right;
  margin-top: 12rpx;
  margin-right: 12rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 40rpx;
  color: #111;
}

/** SKU 选择 **/

.shopping-sku-list {
  position: absolute;
  width: 100%;
  top: 208rpx;
  bottom: 196rpx;
  padding: 0 24rpx;
  border-bottom: 2rpx solid #f3f3f3;
  overflow-y: scroll;
}

.spec__title {
  display: inline-block;
  margin-bottom: 8rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #111;
}

.spec-list {
  margin-bottom: 32rpx;
  border-bottom: 0.5px solid #ccc;
}

.spec-list:last-of-type {
  margin-bottom: 0;
  border-bottom: none;
}

.spec-item {
  display: inline-block;
  color: #707070;
  border: 2rpx solid #ccc;
  border-radius: 4rpx;
  padding: 16rpx 24rpx;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  line-height: 28rpx;
}

.spec-item--active {
  background-color: #e23737;
  border-color: #e23737;
  color: #fff;
}

/*#sku-selected {
  background-color: #f8504f;
  color: #fff;
}*/

.shopping-amount {
  position: absolute;
  width: 100%;
  bottom: 88rpx;
  padding: 24rpx;
  height: 108rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.shopping-amount__title {
  line-height: 60rpx;
  font-size: 28rpx;
  color: #111;
}

.shopping-select-box {
  border: 2rpx solid #ccc;
}

.shopping-select-box-item {
  display: inline-block;
  height: 58rpx;
  line-height: 58rpx;
  width: 58rpx;
  font-size: 22rpx;
  color: #a5a5a9;
  text-align: center;
}

.shopping-quantity {
  font-size: 28rpx;
  color: #111;
  min-width: 74rpx;
  border-left: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
}

.shopping-box-foot {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  background-color: #fff;
  border-top: 2rpx solid #f3f3f3;
}

.shopping-submit {
  flex: 1;
  text-align: center;
  color: #fff;
  background-color: #111;
}

.nomore-inventory {
  background-color: #111;
  opacity: 0.8;
}

.detail-mask {
  display: none;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.detail-mask--active {
  display: block;
}

/** 问答弹框 **/

.QandA-container {
  position: fixed;
  bottom: 0;
  height: 65%;
  width: 100%;
}

.QandA__close {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx;
}

.QandA__close-icon {
  font-size: 40rpx;
}

.QandA-list {
  position: absolute;
  top: 0;
  bottom: 88rpx;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  padding: 40rpx;
  font-size: 26rpx;
  line-height: 56rpx;
  background-color: #fff;
}

.QandA__question {
  display: block;
  margin-top: 56rpx;
  color: #4a4b5a;
}

.QandA__question:first-of-type {
  margin-top: 0;
}

.QandA__answer {
  display: block;
  color: #959595;
}

.QandA__confirm {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  background-color: #111;
}

.tips-content {
  position: relative;
}

.flash-tip {
  position: absolute;
  left: 0;
  top: 0;
  border: 2rpx solid #f68d08;
  border-radius: 4rpx;
  width: 116rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  color: #f68d08;
  margin-bottom: 20rpx;
  text-align: center;
}

.toast {
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  top: 701rpx;
  width: 320rpx;
  height: 98rpx;
  background: #111;
  opacity: 0.5;
  border-radius: 4rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 5;
}

.toast__text {
  font-size: 30rpx;
  color: #fff;
  line-height: 30rpx;
  text-align: center;
}

.modal-padding {
  padding-top: 138rpx;
  height: 100%;
}

.preferential-tabs {
  margin-bottom: 16rpx;
}

.preferential-tab {
  display: flex;
  height: 100rpx;
  width: 100%;
  background: #fff;
  box-shadow: inset 0 2rpx 0 0 #e7e7e7;
  padding: 0 48rpx;
  align-items: center;
}

.preferential-tab .arrow-icon {
  margin: 0;
}

.tab-name {
  width: 64rpx;
  height: 36rpx;
  font-size: 22rpx;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
  line-height: 36rpx;
  margin-right: 24rpx;
}

.coupon-tab .tab-name {
  background: #e23737;
}

.coupon-tab .tab-text {
  color: #e23737;
}

.present-tab .tab-name {
  background: #f68d08;
}

.specail-tab .tab-name {
  background: #cabd73;
}

.tab-text {
  font-size: 26rpx;
  color: #111;
  letter-spacing: 0;
  line-height: 48rpx;
  width: 526rpx;
  margin-right: 21rpx;
}

.preferential-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  flex-direction: column-reverse;
}

.preferential-modal-content {
  width: 750rpx;
  height: 822rpx;
  background: #fff;
  position: relative;
  padding: 48rpx 48rpx 0;
}

.close-modal-btn {
  position: absolute;
  right: 50rpx;
  top: 50rpx;
  width: 28rpx;
  height: 28rpx;
  color: #000;
  font-size: 50rpx;
  z-index: 4;
}

.modal-title {
  font-size: 64rpx;
  color: #111;
  line-height: 186rpx;
  height: 186rpx;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding: 0 48rpx;
  box-sizing: border-box;
  background: #fff;
  z-index: 3;
}

.present-text {
  padding: 48rpx 0;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #707070;
  line-height: 48rpx;
  border-bottom: 1rpx solid #ccc;
}

.present-text:last-child {
  border: none;
}

.presale {
  padding: 48rpx 48rpx 16rpx;
}

.presale-title {
  font-size: 38rpx;
  color: #111;
  letter-spacing: 0;
  line-height: 53rpx;
  margin-bottom: 46rpx;
}

.presale-item {
  margin-bottom: 48rpx;
  padding-left: 28rpx;
  box-sizing: border-box;
}

.presale-item-name::before {
  display: block;
  content: '';
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #e23737;
  position: absolute;
  left: -28rpx;
  top: 50%;
  transform: translateY(-50%);
}

.presale-item-name {
  position: relative;
  font-size: 26rpx;
  line-height: 42rpx;
  color: #111;
  letter-spacing: 0;
  display: inline-block;
}

.presale-item-text {
  font-size: 26rpx;
  color: #000;
  letter-spacing: 0;
  line-height: 42rpx;
}

.special-item {
  height: 110rpx;
  line-height: 110rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #111;
  letter-spacing: 0;
  border-bottom: 1rpx solid #ccc;
}

.special-item .arrow-icon {
  margin-left: 48rpx;
}

.special-text {
  width: 600rpx;
}

.coupon-list, .present-list, .special-list {
  height: 100%;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

.coupon-item {
  position: relative;
  margin-bottom: 48rpx;
  height: 240rpx;
  overflow: hidden;
  color: #111;
  box-sizing: border-box;
}

.coupon-over-time {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  box-sizing: border-box;
  width: 102rpx;
  height: 102rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;
}

.coupon-over-time-circle {
  width: 85rpx;
  height: 85rpx;
  border-radius: 50%;
  border: 1rpx solid #fff;
  font-family: Helvetica-Bold;
  font-size: 24rpx;
  line-height: 85rpx;
  text-align: center;
  color: #ccc;
  transform: rotate(-45deg);
}

.coupon-item__checkbox {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 44rpx;
  line-height: 44rpx;
  color: #b8b8b8;
}

.coupon-item__checkbox--selected {
  color: #e23737;
}

.coupon-item--left, .coupon-item--right {
  display: flex;
  flex-flow: column;
}

.coupon-item-content {
  width: 100%;
  display: flex;
  height: 165rpx;
  background: #cabd73;
}

.coupon-item-bottom {
  width: 100%;
  height: 80rpx;
  background-size: 100% 80rpx;
  background-repeat: no-repeat;
  background-position: top center;
  margin-top: -5rpx;
}

.coupon-item--left {
  width: 212rpx;
  font-size: 34rpx;
  background-position: left top;
  box-sizing: border-box;
  position: relative;
}

.coupon__name {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #fff;
  line-height: 42rpx;
  margin: 40rpx 0 8rpx;
}

.coupon__description {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #fff;
  line-height: 80rpx;
  padding-left: 32rpx;
  box-sizing: border-box;
}

.coupon__valid-time {
  font-family: Helvetica-Light;
  font-size: 20rpx;
  color: #fff;
  line-height: 28rpx;
}

.coupon__face-value {
  margin: 40rpx 0 16rpx 59rpx;
  font-family: Helvetica-Bold;
  font-size: 64rpx;
  line-height: 77rpx;
  color: #fff;
  position: relative;
}

.coupon__face-value::before {
  content: '\00A5';
  display: block;
  position: absolute;
  top: -10rpx;
  left: -27rpx;
  font-size: 40rpx;
  color: #fff;
}

.coupon-item--center {
  flex: 1;
  font-size: 24rpx;
  line-height: 32rpx;
  color: #b8b8b8;
  background-position: right top;
}

.coupon__minimum_amount {
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #959595;
}

.coupon-item--right {
  width: 132rpx;
  height: 100%;
  margin-right: 40rpx;
}

.go-use {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #cabd73;
  width: 132rpx;
  height: 40rpx;
  background: #fff;
  text-align: center;
  line-height: 40rpx;
  margin-top: 56rpx;
}

.cant-use-cover {
  position: absolute;
  left: 0;
  top: 0;
  width: 654rpx;
  height: 240rpx;
  background: rgba(17, 17, 17, 0.30);
}

.price-box {
  display: flex;
  height: 57rpx;
  align-items: center;
  line-height: 57rpx;
  margin-top: 50rpx;
  margin-bottom: 16rpx;
}

.standard-title {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #959595;
  line-height: 37rpx;
}

.novel-title {
  font-size: 38rpx;
  text-align: center;
  color: #111;
  letter-spacing: 0;
}

.novel-modal-body {
  border-top: 2rpx dashed #ccc;
  margin-top: 2rpx;
  padding-top: 48rpx;
  font-size: 28rpx;
  color: #959595;
  line-height: 48rpx;
}

/* 秒杀  */

.flash-row {
  display: flex;
  background: rgba(246, 141, 8, 0.2);
  color: #f68d08;
  height: 72rpx;
  width: 100%;
  align-items: center;
  justify-content: space-between;
}

.flash-status {
  font-size: 38rpx;
  letter-spacing: 0;
  margin-left: 48rpx;
}

.flash-content {
  align-items: center;
  height: 100%;
  margin-right: 24rpx;
  display: flex;
}

.countdown-title {
  font-size: 26rpx;
  margin-right: 12rpx;
}

.countdown-content {
  display: flex;
  align-items: center;
}

.countdown-box {
  background: #fff;
  width: 52rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  padding: 0 8rpx;
  border-radius: 4rpx;
  text-align: center;
  box-sizing: border-box;
}

.countdown-colon {
  font-size: 30rpx;
  line-height: 30rpx;
  color: #fff;
  margin: 0 6rpx;
}

.started {
  background: #f68d08;
  color: #fff;
}

.started .countdown-box {
  color: #f68d08;
}

.banner-swiper {
  height: 540rpx;
}

.banner-slide-image {
  width: 100%;
  height: 540rpx;
}

.product-image-index {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  font-size: 22rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 4rpx;
  line-height: 35rpx;
  height: 30rpx;
  padding: 0 10rpx;
  letter-spacing: 2rpx;
}

.novelty-content {
  position: relative;
  box-sizing: border-box;
  width: 100rpx;
}

.novelty-content-bottom {
  color: #ccc;
  font-size: 20rpx;
  display: flex;
}

.novelty-content-active {
  font-size: 20rpx;
  overflow: hidden;
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  color: #e23737;
}

.product-novelty-score {
  font-size: 22rpx;
  color: #959595;
  letter-spacing: 0;
}

.novelty-tip-icon {
  margin-left: 4rpx;
}

.novelty-tip-icon::before {
  font-size: 26rpx;
}

.detail__price {
  margin-bottom: 8rpx;
}

/* 运费模板  */

.detail-shipping-cost {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.shipping-cost-title {
  font-size: 24rpx;
  color: #ccc;
  line-height: 33rpx;
}

.shipping-cost-value {
  font-size: 24rpx;
  color: #ccc;
  line-height: 33rpx;
}

.purchase-limit-tip {
  font-size: 22rpx;
  color: #E23737;
  line-height: 40rpx;
}

.disabled {
  background: #ccc;
  color: #fff;
}
