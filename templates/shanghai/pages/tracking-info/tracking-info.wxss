page {
  background-color: #efeff4;
}
.tracking-info--header {
  display: flex;
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #e5e5e5;
  background-color: #fff;
}

.tracking-info__image {
  width: 130rpx;
  height: 130rpx;
  margin-right: 24rpx;
}

.tracking-info-content {
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  font-size: 28rpx;
}

.tracking-info-content-item {
  color: #87858f;
}

.tracking-info--mian {
  padding: 0 32rpx;
  margin-top: 20rpx;
  background-color: #fff;
  overflow: hidden;
}

.tracking-info__title {
  display: inline-block;
  margin: 30rpx 0;
  font-size: 28rpx;
  color: #3c3b4b;
}

.tracking-info__item {
  position: relative;
  padding-bottom: 30rpx;
  padding-left: 56rpx;
  font-size: 24rpx;
  color: #87858f;
}

.tracking-info__context {
  position: relative;
  top: -10rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}

.tracking-info__time {
  line-height: 33rpx;
}

.tracking-info__item::before {
  position: absolute;
  left: 0px;
  content: '';
  display: inline-block;
  width: 9px;
  height: 9px;
  background-color: #e7e7e7;
  border-radius: 50%;
  z-index: 2;
}

.tracking-info__item::after {
  position: absolute;
  left: 4px;
  top: 12rpx;
  bottom: 0;
  content: '';
  display: inline-block;
  border-left: 1px solid #e7e7e7;
}

.tracking-info__item--first {
  color: #3c3b4b;
}

.tracking-info__item--first::before {
  left: -2px;
  width: 5px;
  height: 5px;
  background-color: #50e3c2;
  background-clip: content-box;
  border: 4px solid rgba(79, 227, 194, .5);
  z-index: 2;
}

.icon-mystery {
  position: relative;
  border: 2rpx solid #ccc;
  box-sizing: border-box;
}

.icon-mystery::before {
  position: absolute;
  font-size: 83rpx;
  color: #cabd73;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
}